// Ukázkové falešné recenze v češtině
const initialReviews = [
    {
        author: "Jan Novák",
        text: "Skvělé burgery! Nejlepší, co jsem kdy měl v Plzni. Určitě doporučuji všem milovníkům burgerů."
    },
    {
        author: "Petra Svobodová",
        text: "Příjemná obsluha a atmosféra. Veggie Delight je naprosto úžasný!"
    },
    {
        author: "Tomáš Dvořák",
        text: "Rychlé doručení a výborné hranolky k burgeru. Moc rád se vrátím."
    }
];

// Zobrazení recenzí
function renderReviews() {
    const reviewsDiv = document.getElementById("reviews-list");
    reviewsDiv.innerHTML = "";

    const reviews = JSON.parse(localStorage.getItem("reviews") || "[]");
    const allReviews = initialReviews.concat(reviews);

    allReviews.forEach(review => {
        const div = document.createElement("div");
        div.className = "review-item";
        div.innerHTML = `<div class="review-author">${review.author}</div><div>${review.text}</div>`;
        reviewsDiv.appendChild(div);
    });
}

// Odeslání recenze
document.addEventListener("DOMContentLoaded", () => {
    renderReviews();

    document.getElementById("review-form").addEventListener("submit", function(e) {
        e.preventDefault();
        const name = document.getElementById("name").value.trim();
        const text = document.getElementById("review").value.trim();
        if (name && text) {
            const reviews = JSON.parse(localStorage.getItem("reviews") || "[]");
            reviews.push({ author: name, text: text });
            localStorage.setItem("reviews", JSON.stringify(reviews));
            renderReviews();
            this.reset();
        }
    });
});
